<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/backgroundrelativelayout"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/instagram"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/instalogo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter username"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:layout_below="@+id/instalogo"
        android:layout_marginTop="5dp"
        android:id="@+id/usernameEditText"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter password"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginTop="5dp"
        android:id="@+id/passwordEditText"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:hint="Enter password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="5dp"
        android:id="@+id/signUpbutton"
        android:onClick="signup"
        />

    <TextView
        android:id="@+id/changeSignUpModeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/signUpbutton"
        android:layout_centerVertical="true"
        android:textColor="#0734e9"
        android:text="or , sign in"
        android:textSize="18sp"/>


</RelativeLayout>
